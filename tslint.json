{
  "extends": "tslint-eslint-rules",
  "rules": {
    // 尾部空格检测
    "no-trailing-whitespace": false,
    // 行内检测
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace" // 要求函数名，参数表和函数段开头的大括号之间要有空格
    ],
    // 禁用 var 定义变量
    "no-var-keyword": true,
    // 注释行中的空格
    "comment-format": [true, "check-space"],
    // 空格在其他部分的设置
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator", // 要求在初始化数组的时候，相邻元素间不仅要用“,”分隔，还需要在其之后加入空格
      "check-type"
    ],
    // 引用符号规范
    "quotemark": false,
    // 在变量没有在程序段中重新赋值的时候提示使用const
    "prefer-const": true,
    // 禁止结尾分号
    "semicolon": false
  },
  "globals": {
    "require": true
  }
}
